@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("SignOut", "Conta", FormMethod.Post))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="javascripf:void(0)" style="cursor:default">Olá @User.Identity.GetUserName()</a>
        </li>
        <li>@Html.ActionLink("Sair", "SignOut", "Conta")</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Index", "Conta", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
